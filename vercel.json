{
  "version": 2,
  "builds": [
    {
      "src": "api/server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(submitPost|posts|post/[^/]+|post/[^/]+/comment)",
      "dest": "api/server.js"
    },
    {
      "src": "/",
      "dest": "public/index.html"
    },
    {
      "src": "/write",
      "dest": "public/write.html"
    },
    {
      "src": "/post",
      "dest": "public/post.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
